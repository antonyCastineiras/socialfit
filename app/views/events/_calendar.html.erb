<%= month_calendar events: @events, previous_link: events_ajax_previous_link, next_link: events_ajax_next_link  do |date, events| %>
  <%= date.day %>
	<% events.each do |event| %>
		<div class="calendar-event">
			<%= link_to event.name, event_path(event) %>
		</div>
	<% end %>
<% end %>
<script>
	$('a.calendar-next-link, .calendar-previous-link').on('click', function(event) {
			event.preventDefault();
			$.ajax({
				type: 'get',
				url: 'events',
				data: paramsFromHref($(this).attr('href')),
				dataType: 'script',
				success: function(data) {
					console.log(data);
				}
			});
		});
</script>
