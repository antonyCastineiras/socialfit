<div class="simple-calendar clearfix">
  <span class="calendar-title"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></span>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
  <div class="calendar-heading pull-right">
    <%= link_to t('simple_calendar.previous', default: 'Previous'), calendar.url_for_previous_view + '&page_update=false', class: 'calendar-previous-link', remote: true %>
    <%= link_to t('simple_calendar.next', default: 'Next'), calendar.url_for_next_view + '&page_update=false', class: 'calendar-next-link', remote: true %>
  </div>

    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(block) %>
                <% capture_haml(day, sorted_events.fetch(day, []), &block) %>
              <% else %>
                <% block.call day, sorted_events.fetch(day, []) %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

    <%= render partial: 'partials/calendar_controls', locals: {calendar: calendar} %>
</div>
