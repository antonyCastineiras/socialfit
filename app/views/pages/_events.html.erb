<h1>Events</h1>
<div class="dropdown">
	<%= link_to "Create event", nil, class: "toggle-dropdown" %>
	<div class="dropdown-content">
		<%= render partial: 'forms/new_event_form' %>
	</div>
</div>

<div class="calendar-options">
      <%= link_to "Display all events", update_events_path(requested_events: 'all' ), class: "update-calendar-link btn btn-primary update-calendar-btn #{ 'active' if params[:requested_events] == 'all'}", remote: true%> 
      <%= link_to "Display your events", update_events_path(requested_events: 'own' ), class: "update-calendar-link btn btn-primary update-calendar-btn #{ 'active' if params[:requested_events] == 'own'}", remote: true %> 
      <%= link_to "Display friends events", update_events_path(requested_events: 'friends'), class: "update-calendar-link btn btn-primary update-calendar-btn #{ 'active' if params[:requested_events] == 'friends'}", remote: true %> 
      <%= link_to "Display recommended events", update_events_path(requested_events: 'recommended'), class: "update-calendar-link btn btn-primary update-calendar-btn #{ 'active' if params[:requested_events] == 'recommended'}", remote: true %>
      <%= link_to "Display nearby events", update_events_path(requested_events: 'nearby'), class: "update-calendar-link btn btn-primary update-calendar-btn #{ 'active' if params[:requested_events] == 'nearby'}", remote: true %>
    </div>
<%= render partial: 'partials/events_list', locals: {events: @events} %>
